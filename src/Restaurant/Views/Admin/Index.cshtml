@model IEnumerable<Restaurant.Models.Message>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "All Messages";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th class="text-center">MemberID</th>
            <th class="text-center">Member Name</th>
            <th class="text-center">Subject</th>
            <th class="text-center">Body</th>
            <th class="text-center">Actions</th>
        </tr>
        @foreach (var message in Model)
        {
            <tr>
                <td class="text-left">@message.MessageID</td>
                <td class="text-left">@message.From.FirstName</td>
                <td class="text-left">@message.Subject</td>
                <td class="text-left">@message.Body</td>
                <td class="text-center">

                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-MessageID="@message.MessageID">
                            Edit
                        </a>
                        <input type="hidden" name="MessageID" value="@message.MessageID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <span class="label label-success">
        <a asp-action="MakeNewMessage" asp-controller="Message">Add Message</a>
        </span>
</body>
</html>

